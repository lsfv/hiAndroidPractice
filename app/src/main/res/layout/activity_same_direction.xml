<?xml version="1.0" encoding="utf-8"?>
<com.linson.android.hiandroid2.UI.NewCustomView.MyTouch.cv.ScrollViewEXOunter xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="105dp"
            android:layout_height="86dp"
            android:layout_margin="8dp"
            app:srcCompat="@mipmap/ic_launcher_round" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/article_1"
            android:textSize="36sp" />
        <com.linson.android.hiandroid2.UI.NewCustomView.MyTouch.cv.ScrollViewEXInner
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/article_2" />
        </com.linson.android.hiandroid2.UI.NewCustomView.MyTouch.cv.ScrollViewEXInner>
    </LinearLayout>
</com.linson.android.hiandroid2.UI.NewCustomView.MyTouch.cv.ScrollViewEXOunter>